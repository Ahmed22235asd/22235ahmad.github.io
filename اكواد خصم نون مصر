    <div class="btn-group">
      <button class="copy-btn" onclick="copyCode('code2', 'msg2')">📋 نسخ</button>
      <button class="share-btn" onclick="shareCode('N50')">📤 مشاركة</button>
      <button class="use-btn" onclick="useCode('N50')">🛒 استخدم الكوبون</button>
    </div>
    <div id="msg2" class="copied-msg">✅ تم النسخ!</div>
  </div>

  <script>
    function copyCode(codeId, msgId) {
      const code = document.getElementById(codeId).innerText;
      navigator.clipboard.writeText(code).then(() => {
        const msg = document.getElementById(msgId);
        msg.style.display = "inline";
        setTimeout(() => {
          msg.style.display = "none";
        }, 2000);
      });
    }

    function shareCode(code) {
      const text = `🔥 كوبون خصم من نون مصر: ${code} 🛍️ خصم حتى 70٪! 🌟 https://www.noon.com/egypt-ar/`;
      const url = `https://wa.me/?text=${encodeURIComponent(text)}`;
      window.open(url, "_blank");
    }

    function useCode(code) {
      const link = `https://www.noon.com/egypt-ar/?utm_source=coupon&utm_medium=${code}`;
      window.location.href = link;
    }

    function toggleDarkMode() {
      document.body.classList.toggle("dark-mode");
    }
  </script>

